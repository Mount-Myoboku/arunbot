{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2020",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./build",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "sourceRoot": "/",
        "inlineSources": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
}
